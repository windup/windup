<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE weblogic-ejb-jar
  PUBLIC "-//BEA Systems, Inc.//DTD WebLogic 8.1.0 EJB//EN" "http://www.bea.com/servers/wls810/dtd/weblogic-ejb-jar.dtd">
<weblogic-ejb-jar>
	<weblogic-enterprise-bean>
		<ejb-name>WindupExampleService</ejb-name>
		<stateless-session-descriptor>
			<pool>
				<max-beans-in-free-pool>12</max-beans-in-free-pool>
				<initial-beans-in-free-pool>6</initial-beans-in-free-pool>
			</pool>
			<stateless-clustering>
				<stateless-bean-is-clusterable>
					true
				</stateless-bean-is-clusterable>
				<stateless-bean-load-algorithm>round-robin</stateless-bean-load-algorithm>
				<stateless-bean-methods-are-idempotent>false</stateless-bean-methods-are-idempotent>
			</stateless-clustering>
		</stateless-session-descriptor>

	<transaction-descriptor>
		<trans-timeout-seconds>3600</trans-timeout-seconds>
	</transaction-descriptor>


		<reference-descriptor>
			<ejb-local-reference-description>
				<ejb-ref-name>ejb/WindupAnotherExampleService</ejb-ref-name>
				<jndi-name>ejb/WindupAnotherExampleServiceLocalHome</jndi-name>
			</ejb-local-reference-description>
		</reference-descriptor>
		<jndi-name>session/service/WindupExampleServiceLocalHome</jndi-name>
		<local-jndi-name>ejb/WindupExampleServiceLocalHome</local-jndi-name>
	</weblogic-enterprise-bean>
	<weblogic-enterprise-bean>
		<ejb-name>WindupAnotherExampleService</ejb-name>
		<stateless-session-descriptor>
			<pool>
				<max-beans-in-free-pool>12</max-beans-in-free-pool>
				<initial-beans-in-free-pool>6</initial-beans-in-free-pool>
			</pool>
			<stateless-clustering>
				<stateless-bean-is-clusterable>true</stateless-bean-is-clusterable>
				<stateless-bean-load-algorithm>round-robin</stateless-bean-load-algorithm>
				<stateless-bean-methods-are-idempotent>false</stateless-bean-methods-are-idempotent>
			</stateless-clustering>
		</stateless-session-descriptor>
		<jndi-name>session/service/WindupAnotherExampleServiceLocalHome</jndi-name>
		<local-jndi-name>ejb/WindupAnotherExampleServiceLocalHome</local-jndi-name>
	</weblogic-enterprise-bean>

	<weblogic-enterprise-bean>
		<ejb-name>WindupNonClusteredService</ejb-name>
		<jndi-name>session/service/WindupNonClusteredServiceLocalHome</jndi-name>
		<local-jndi-name>ejb/WindupNonClusteredServiceLocalHome</local-jndi-name>
	</weblogic-enterprise-bean>

	<weblogic-enterprise-bean>
		<ejb-name>WindupStatefulClusteredService</ejb-name>
		<stateful-session-descriptor>
			<stateful-session-clustering>
				<home-is-clusterable>true</home-is-clusterable>
			</stateful-session-clustering>
			<allow-concurrent-calls>false</allow-concurrent-calls>
			<allow-remove-during-transaction>false</allow-remove-during-transaction>
		</stateful-session-descriptor>
		<jndi-name>session/service/WindupStatefulClusteredServiceLocalHome</jndi-name>
		<local-jndi-name>ejb/WindupStatefulClusteredServiceLocalHome</local-jndi-name>
	</weblogic-enterprise-bean>

	<weblogic-enterprise-bean>
		<ejb-name>WindupMLBean</ejb-name>
		<message-driven-descriptor>
			<pool>
				<max-beans-in-free-pool>5</max-beans-in-free-pool>
			</pool>
			<destination-jndi-name>queue/WindupMLQueue</destination-jndi-name>
		</message-driven-descriptor>
		<reference-descriptor>
			<resource-description>
				<res-ref-name>smtp/WindupMail</res-ref-name>
				<jndi-name>/WindupMail</jndi-name>
			</resource-description>
			<resource-description>
				<res-ref-name>jdbc/WindupDataSource</res-ref-name>
				<jndi-name>jdbc/WindupDS</jndi-name>
			</resource-description>
			<resource-description>
				<res-ref-name>jms/WindupQueueConnectionFactory</res-ref-name>
				<jndi-name>/ConnectionFactory</jndi-name>
			</resource-description>
			<resource-description>
				<res-ref-name>jms/WindupTopicConnectionFactory</res-ref-name>
				<jndi-name>/ConnectionFactory</jndi-name>
			</resource-description>
			<resource-description>
				<res-ref-name>jms/WindupExampleQueue</res-ref-name>
				<jndi-name>queue/WindupExampleQueue</jndi-name>
			</resource-description>
			<resource-description>
				<res-ref-name>jms/WindupExampleTopic</res-ref-name>
				<jndi-name>topic/WindupExampleTopic</jndi-name>
			</resource-description>
		</reference-descriptor>
	</weblogic-enterprise-bean>

	<security-role-assignment>
		<role-name>WindupUser</role-name>
		<principal-name>WindupUser</principal-name>
	</security-role-assignment>

	<run-as-role-assignment>
		<role-name>Windup_APP</role-name>
		<run-as-principal-name>WindupExamplePrinciple</run-as-principal-name>
	</run-as-role-assignment>


</weblogic-ejb-jar>