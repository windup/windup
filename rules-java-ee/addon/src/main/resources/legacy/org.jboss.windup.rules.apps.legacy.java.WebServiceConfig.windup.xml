<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/v1/xml" id=" WebServiceConfig">
    <rules>
        <rule>
            <when>
                <javaclass references="javax.xml.rpc.Service$" as="default">
                    <location>INHERITANCE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <classification classification="JAX-RPC Service" effort="0"/>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.wsee.jaxrpc.ServiceImpl" as="default">
                    <location>INHERITANCE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <classification classification="Weblogic Web Service Implementation" effort="6">
                        <link href="http://cxf.apache.org/docs/a-simple-jax-ws-service.html" description="Apache CXF Simple JAX-WS Web Service Example"/>
                    </classification>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.wsee.jaxrpc.ServiceImpl" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace with JAX-WS Web Service Implementation." effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.wsee.async.AsyncPreCallContext" as="default">
                    <location>TYPE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <classification classification="Asynchronous Web Service Client" effort="8">
                        <link href="http://docs.oracle.com/cd/E15051_01/wls/docs103/webserv_adv_rpc/asynch.html" description="Weblogic Asynchronous Execution Documentation"/>
                        <link href="http://singztechmusings.in/consuming-web-services-in-cxf-non-blocking-asynchronous-invocation-model/" description="CXF Asynchronous Webservice Client Example"/>
                    </classification>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.wsee.connection.transport.http.HttpTransportInfo.setUsername({*})" as="default">
                    <location>METHOD</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace proprietary web-service authentication with JAX-WS standards." effort="0">
                        <link href="http://java-x.blogspot.com/2009/03/invoking-web-services-through-proxy.html" description="JAX-WS Proxy Password Example"/>
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.wsee.async.AsyncPreCallContext" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace with CXF Asynchronous Client." effort="8">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.common.T3StartupDef" as="default">
                    <location>INHERITANCE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <classification classification="Weblogic Startup Service" effort="4">
                        <link href="http://docs.oracle.com/javaee/6/api/javax/ejb/Singleton.html" description="EJB3.1 Singleton Bean"/>
                        <link href="http://docs.oracle.com/javaee/6/api/javax/ejb/Startup.html" description="EJB3.1 Startup Bean"/>
                    </classification>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.common.T3StartupDef" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace with EJB 3.1 @Singleton / @Startup annotations." effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.common.T3ServicesDef" as="default">
                    <location>INHERITANCE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <classification classification="Weblogic Startup Service" effort="8">
                        <link href="http://docs.oracle.com/javaee/6/api/javax/ejb/Startup.html" description="EJB3.1 Startup Bean"/>
                        <link href="http://docs.oracle.com/javaee/6/api/javax/ejb/Singleton.html" description="EJB3.1 Singleton Bean"/>
                    </classification>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.common.T3ServicesDef" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="In JBoss 5, replace with an MBean." effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.common.T3ServicesDef" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="In JBoss 6, replace with an @Singleton EJB." effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.time.common.Triggerable" as="default">
                    <location>INHERITANCE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <classification classification="Weblogic Scheduled Job" effort="0">
                        <link href="http://jaitechwriteups.blogspot.com/2010/07/ejb31-timerservice-in-jboss-as-600m4.html" description="JBoss EJB3.1 Scheduled Job"/>
                        <link href="http://www.java2s.com/Code/Java/EJB3/EJBTutorialfromJBosstimer.htm" description="JBoss EJB3.0 Timeout Job"/>
                    </classification>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.wsee.async.AsyncPreCallContext" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace with CXF Asynchronous Client." effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.utils.StringUtils.{*}" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace with Apache Commons's StringUtils" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.apache.xml.{*}" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace weblogic.apache.xml with org.apache.xml (Xerces)" effort="1">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.transaction.TransactionManager" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace with the JEE standard javax.transaction.TransactionManager" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.transaction.TransactionManager.resume" as="default">
                    <location>METHOD</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace with the JEE standard javax.transaction.TransactionManager.resume(Transaction tx)" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.transaction.TransactionManager.suspend()" as="default">
                    <location>METHOD</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace with the JEE standard javax.transaction.TransactionManager.suspend()" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.transaction.TxHelper" as="default">
                    <location>IMPORT</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="Remove weblogic.transaction.TxHelper import" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.transaction.ClientTxHelper.getTransactionManager()" as="default">
                    <location>METHOD</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="Look up the JEE javax.transaction.TransactionManager in JBoss using the javax.naming.InitialContext: java:TransactionManager" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.transaction.TxHelper.getTransactionManager()" as="default">
                    <location>METHOD</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="Look up the JEE javax.transaction.TransactionManager in JBoss using the javax.naming.InitialContext: java:TransactionManager" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.common.T3StartupDef" as="default">
                    <location>INHERITANCE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="T3StartupDef defines a startup service in Weblogic. The main method is executed when the server starts up, if it is registered in the Weblogic context.xml The equivalent in JBoss 5 is to use a JMX Management annotation: org.jboss.annotation.ejb.Management." effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.logging.NonCatalogLogger" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="NonCatalogLogger is a logger for logging messages to the Weblogic log; replace this with log4j, commons logging, or slf4j, with an appropriate log level." effort="1">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.time.common.Triggerable" as="default">
                    <location>INHERITANCE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace weblogic.time.common.Triggerable with EJB3 @Timeout" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.time.common.Triggerable" as="default">
                    <location>INHERITANCE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace weblogic.time.common.Triggerable with org.jboss.varia.scheduler.Schedulable for JBoss 5" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.jdbc.vendor.oracle.OracleThinClob" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Weblogic-specific Code; replace with oracle.sql.CLOB" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.jdbc.vendor.oracle.OracleThinClob|oracle.sql.CLOB.getCharacterOutputStream()" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Weblogic-specific Code; replace with oracle.sql.CLOB.getCharacterOutputStream(1)" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.common.T3ServicesDef" as="default">
                    <location>TYPE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="In JBoss 5, look up the MBean replacement for the T3ServicesDef." effort="1">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.common.T3ServicesDef" as="default">
                    <location>TYPE</location>
                </javaclass>
            </when>
            <perform>
                <iteration>
                    <hint message="In JBoss 6, inject the @Singleton, @Startup EJB3." effort="1">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.wsee.context.WebServiceContext" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Replace with javax.xml.ws.WebServiceContext" effort="1">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <javaclass references="weblogic.wsee.context.ContextNotFoundException" as="default"/>
            </when>
            <perform>
                <iteration>
                    <hint message="Weblogic specific; remove." effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
    </rules>
</ruleset>
