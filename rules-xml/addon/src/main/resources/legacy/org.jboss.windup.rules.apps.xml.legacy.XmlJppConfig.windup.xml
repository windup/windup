                    <namespace prefix="jee" uri="http://java.sun.com/xml/ns/javaee"/>
                </xmlfile>
            </when>
            <perform>
                <iteration over="1">
                    <hint message="PortletBridge State Manager" effort="0">
                    </hint>
                </iteration>
                <iteration over="2">
                    <hint message="Remove this entry, as it's not needed by Red Hat JBoss Portal 6.x" effort="1">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <xmlfile as="1" matches="/application/module/java/text()">
                </xmlfile>
                <xmlfile as="2" matches="/application/module/java/text()" xpathResultMatch=".*jar$" from="1">
                </xmlfile>
            </when>
            <perform>
                <iteration over="1">
                    <hint message="Portal library" effort="1">
                    </hint>
                </iteration>
                <iteration over="2">
                    <hint message="Move the library to the EAR's lib directory. See https://access.redhat.com/site/documentation/en-US/Red_Hat_JBoss_Portal/6.0/html/Migration_Guide/ar01s06.html" effort="0">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <xmlfile as="1" matches="//*[starts-with(., 'org.jboss.portal.portlet.impl.jsr168.taglib')]/text()">
                </xmlfile>
                <xmlfile as="2" matches="//*[starts-with(., 'org.jboss.portal.portlet.impl.jsr168.taglib')]/text()" xpathResultMatch="org.jboss.portal.portlet.impl.jsr168.taglib.*" from="1">
                </xmlfile>
            </when>
            <perform>
                <iteration over="1">
                    <hint message="PortletBridge org.jboss.portal.portlet.impl.jsr168.taglib moved" effort="0">
                    </hint>
                </iteration>
                <iteration over="2">
                    <hint message="This package has been moved to org.gatein.pc.portlet.impl.jsr168.taglib" effort="1">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <xmlfile as="1" matches="//*[starts-with(., 'org.exoplatform.web.login.InitiateLoginServlet')]/text()">
                </xmlfile>
                <xmlfile as="2" matches="//*[starts-with(., 'org.exoplatform.web.login.InitiateLoginServlet')]/text()" xpathResultMatch="org.exoplatform.web.login.InitiateLoginServlet" from="1">
                </xmlfile>
            </when>
            <perform>
                <iteration over="1">
                    <hint message="Class org.exoplatform.web.login.InitiateLoginServlet moved" effort="0">
                    </hint>
                </iteration>
                <iteration over="2">
                    <hint message="This class was removed in Red Hat JBoss Portal Platform 6. See the web.xml/login.jsp from the sample-portal quickstart for an example on how to deal with authentication/authorization on this version." effort="1">
                    </hint>
                </iteration>
            </perform>
        </rule>
        <rule>
            <when>
                <xmlfile as="1" matches="//*[starts-with(., 'org.exoplatform.web.login.DoLoginServlet')]/text()">
                </xmlfile>
                <xmlfile as="2" matches="//*[starts-with(., 'org.exoplatform.web.login.DoLoginServlet')]/text()" xpathResultMatch="org.exoplatform.web.login.DoLoginServlet" from="1">
                </xmlfile>
            </when>
            <perform>
                <iteration over="1">
